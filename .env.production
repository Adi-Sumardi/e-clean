# ===========================================
# E-CLEAN PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env on your production server
# and fill in the actual values

APP_NAME="E-Clean"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://eclean.adilabs.id

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

# ===========================================
# DATABASE CONFIGURATION (MySQL/PostgreSQL)
# ===========================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=e_clean
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# For PostgreSQL:
# DB_CONNECTION=pgsql
# DB_PORT=5432

# ===========================================
# SESSION & CACHE
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
# Recommended: Use Redis for better performance
# CACHE_STORE=redis

# ===========================================
# QUEUE CONFIGURATION
# ===========================================
QUEUE_CONNECTION=database
# Recommended: Use Redis for better performance
# QUEUE_CONNECTION=redis

# ===========================================
# REDIS (Recommended for production)
# ===========================================
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ===========================================
# MAIL CONFIGURATION
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@eclean.adilabs.id"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# FILESYSTEM
# ===========================================
FILESYSTEM_DISK=public

# ===========================================
# SECURITY
# ===========================================
BCRYPT_ROUNDS=12
SANCTUM_TOKEN_EXPIRATION=86400

# ===========================================
# FONNTE WHATSAPP API
# ===========================================
# Get your token from https://fonnte.com
FONNTE_URL=https://api.fonnte.com/send
FONNTE_TOKEN=your_fonnte_api_token_here

# ===========================================
# GOOGLE OAUTH (Optional)
# ===========================================
# Get credentials from https://console.cloud.google.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# ===========================================
# LOGGING
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ===========================================
# VITE (for asset building)
# ===========================================
VITE_APP_NAME="${APP_NAME}"
